#!/bin/bash

case "$1" in
    PHP_CodeSniffer)
        cd ${TRAVIS_BUILD_DIR}
        composer install
        ./vendor/bin/phpcs
        exit $?
        ;;
    8.*.x)
        cd ${SITE_DIR}/web
        ../vendor/bin/phpunit --verbose
        exit $?
        ;;
    *)
        echo "Unknown test '$1'"
        exit 1
esac
